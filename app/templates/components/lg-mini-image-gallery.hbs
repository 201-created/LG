<div class='mini-image-gallery col-sm-12'>
  <div class='row'>
    <div class='col-sm-2'>
      {{view 'select' class='form-control' content=imageTypes value=selectedImageType}}
    </div>
    <div class='scrollable-gallery col-sm-10'>
      {{#each filteredImages as |image|}}
        {{#lg-selectable model=image activeModel=selectedImage action='selectImage' classNames='mini-image-gallery-image'}}
          <img {{bind-attr src=image.url}}>
        {{/lg-selectable}}
      {{/each}}
    </div>
    <div class='scroll-arrows'>
      <span class='glyphicon glyphicon-chevron-right'></span>
    </div>
  </div>
</div>
