<div class='image-gallery-image'>
  <img {{bind-attr src=image.mainUrl}}>

  <div class='image-properties'>
    {{#if editingEnabled}}
      {{view 'select'
             class='form-control'
             content=imageTypes
             value=image.imageType
             disabled=isImageTypeSelectDisabled
       }}
      <div class='public-private checkbox'>
        {{input type='checkbox'
                checked=image.isPublic
                disabled=isPublicCheckboxDisabled}}
        Public
      </div>
      {{#if image.id}}
        <button
          {{bind-attr
            class=":btn :btn-xs image.isMainImage:btn-success:btn-warning isMainButtonDisabled:disabled"
            disabled=isMainButtonDisabled
          }}
          {{action 'makeMainImage'}}>
          {{#if image.isMainImage}}
            Main
          {{else}}
            Make Main
          {{/if}}
        </button>
      {{else}}
        (unsaved)
      {{/if}}
      <button
        {{bind-attr class=":btn :btn-xs :btn-danger isDeleteButtonDisabled:disabled"}}
        {{bind-attr disabled=isDeletButtonDisabled}}
        {{action 'deleteImage'}}>
        Delete
      </button>

    {{else}}
      <li>{{image.imageType}}</li>
      <li>
        {{#if image.isPublic}}
          Public
        {{else}}
          Private
        {{/if}}
      </li>
    {{/if}}
  </div>
</div>
