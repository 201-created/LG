<form {{action 'login' on='submit'}}>
  {{#if error}}
    <div class="alert alert-error">
      There was an error logging you in: {{error}}.
    </div>
  {{/if}}

  Email: {{input name='email' value=email}}<br>
  Password: {{input name='password' value=password type='password'}}

  <button {{action 'login'}} type='submit' {{bind-attr disabled=toriiSession.isWorking}}>
    {{#if toriiSession.isWorking}}
      Logging in...
    {{else}}
      Log In Now!
    {{/if}}
  </button>
</form>
